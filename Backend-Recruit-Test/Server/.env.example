# ──────────────────────────────────────────────
# Zelosify Backend — Environment Variables
# Copy this file to .env and fill in real values
# ──────────────────────────────────────────────

# Database (PostgreSQL via Docker Compose)
DATABASE_URL=postgresql://postgres:testrun@localhost:5445/zelosify_recruit_test?schema=app

# Security & Encryption
JWT_SECRET=<generate-a-64-char-hex-secret>
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=<generate-a-64-char-hex-key>
SESSION_SECRET=<generate-a-64-char-hex-secret>

# Storage Provider (aws)
STORAGE_PROVIDER=aws

# AWS S3 Configuration
S3_AWS_REGION=us-east-1
S3_ACCESS_KEY_ID=<your-aws-access-key>
S3_SECRET_ACCESS_KEY=<your-aws-secret-key>
S3_BUCKET_NAME=zelosify-recruit-test

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080/auth
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_REALM=Zelosify
KEYCLOAK_CLIENT_ID=dynamic-client
KEYCLOAK_CLIENT_SECRET=<from-keycloak-ui-after-startup>
KEYCLOAK_RS256_SIG=<from-keycloak-ui-realm-keys>

# Server
PORT=5000
